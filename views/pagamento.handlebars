<section>
    <div  " style="height: calc(100vh - 90px);">

        <h1 class="text-center text-slate-900 text-2xl pt-2 pb-8">Pagamentos Realizados!</h1>
        <div class="p-10 w-3/4 flex justify-center items-center bg-slate-200 mx-auto " style="flex-wrap: wrap;">
            {{#each pagamentos}}
            <div class="border-2  border-dashed border-slate-600 mx-5 p-2 mb-2">
                Id: {{id}}<br>
                Nome: {{nome}}<br>
                Valor: {{valor}}<br>
            
                <br>
                <div class="flex gap-x-5">
                    <div class="text-slate-50 bg-red-600 text-center py-2 px-10 rounded-md ">
                        <a href="/del-pagamento/{{id}}"><button>Apagar</button></a> <br>
                    </div>
                    <div class="text-slate-50 bg-green-600 text-center py-2 px-10 rounded-md ">
                        <a href="/update/{{id}}"><button>Atualizar</button></a>
                    </div>
                </div>
            </div>

            {{/each}}
        </div>
    </div>
</section>