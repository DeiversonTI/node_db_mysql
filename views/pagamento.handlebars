<h1 class="text-center text-slate-900 text-2xl pt-2 pb-8">Pagamentos Realizados!</h1>

{{#each pagamentos}}
<div class="border-2  border-dashed border-slate-600 mx-5 p-1 mb-2">
    Id: {{id}}<br>
    Nome: {{nome}}<br>
    Valor: {{valor}}<br>
    Cadastrado: {{createdAt}}<br>
    <br>
    <div class="text-slate-50 bg-red-600 text-center py-2 px-10 rounded-md w-1/3">
        <a href="/del-pagamento/{{id}}"><button>Apagar</button></a>
    </div>
</div>

{{/each}}